{
  "name": "@readme/oas-extensions",
  "description": "A list of extensions that ReadMe has added to extend the OpenAPI Specification",
  "version": "14.2.0",
  "author": "Jon Ursenbach <jon@readme.io>",
  "license": "ISC",
  "main": "dist/index.js",
  "types": "@types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git://github.com/readmeio/oas-extensions.git"
  },
  "engines": {
    "node": "^12 || ^14 || ^16"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --ext .js,.ts",
    "lint:docs": "alex . .github/",
    "prebuild": "rm -rf dist/ @types/",
    "prepack": "npm run build",
    "prepare": "husky install",
    "pretest": "npm run lint && npm run lint:docs",
    "prettier": "prettier --list-different --write \"./**/**.{js,ts}\"",
    "release": "npx conventional-changelog-cli -i CHANGELOG.md -s && git add CHANGELOG.md",
    "test": "tsc; jest --coverage",
    "test-watch": "tsc; jest --watch",
    "watch": "tsc --watch"
  },
  "peerDependencies": {
    "oas": "^17.1.0 || ^18.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@readme/eslint-config": "^8.5.0",
    "@readme/oas-examples": "^4.3.2",
    "@types/jest": "^27.4.1",
    "alex": "^10.0.0",
    "eslint": "^8.10.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.6.2"
  },
  "prettier": "@readme/eslint-config/prettier",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0,
        "always",
        "Infinity"
      ],
      "footer-max-line-length": [
        0,
        "always",
        "Infinity"
      ]
    }
  }
}
